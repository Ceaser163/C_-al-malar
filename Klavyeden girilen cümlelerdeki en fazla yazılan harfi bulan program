#include <stdio.h>
#include <stdlib.h>

int main()
{
   int encok;
   int i=0;
   char harf;
   char cumle[50];
   int kucukharf[100]={0};
   
   printf("cumleyi giriniz:");
   gets(cumle);
   
   while(cumle[i])
   {
   	
   	  if(cumle[i]>='a' && cumle[i]<='z')
		 {
   	  	
			 kucukharf[cumle[i]-'a']++;
		 }
   	    i++;
   }
   
   encok=kucukharf[0];
   
   for(i=1;i<26;++i)
   {
   	
   	if(kucukharf[i] !=0)
	   {
   		if(kucukharf[i]>encok)
		   {
   			encok=kucukharf[i];
   			harf=i+'a';
		   }
	   }
   }
   
   printf("En cok kullanÄ±lan harf:%c",harf);
   
   return 0;
}
