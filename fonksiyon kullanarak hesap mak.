#include <stdio.h>
#include <stdlib.h>
#include <string.h>

    int main(){
	int sonuc;

      printf(" ",hesapmak(sonuc));
      
	  return(0);
}

void hesapmak(float sonuc)
{
    float sayi1,sayi2,sonuc1;
    char islem;
    
    printf("islem seciniz: (+ - / *)\n");
    scanf("%c",&islem);
    
    printf("iki sayi giriniz\n");
    scanf("%f%f",&sayi1,&sayi2);
    
     switch(islem)
     {
     	case '+':
     	    sonuc=sayi1+sayi2;
     		printf("islem sonucu: %.2f",sonuc);
		    break;
	    case '-':
	        sonuc=sayi1-sayi2;
	    	printf("islem sonucu: %.2f",sonuc);
		    break;
	    case '/':
	        sonuc=sayi1/sayi2;
	    	printf("islem sonucu: %.2f",sonuc);
            break;		
		
        case '*':
		    sonuc=sayi1*sayi2;
		    printf("islem sonucu: %.2f",sonuc);
	    	 break;
	 
         default: 
		 
		    printf("yeniden islem seciniz."); 	
			
	 }
	 }
